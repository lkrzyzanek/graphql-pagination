{
  "name": "@graphql-pagination/mongodb",
  "version": "1.2.5",
  "description": "GraphQL Pagination - MongoDB",
  "author": "Libor Krzyzanek",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "typescript": {
    "definition": "dist/index.d.ts"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "clean": "tsc --build --clean && rm -rf coverage"
  },
  "keywords": [
    "graphql",
    "pagination",
    "mongodb"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
