      "require": "./dist/*.js",
      "import": "./dist/*.mjs"
    }
  },
  "dependencies": {
    "@graphql-pagination/core": "^1.14.0"
  },
  "peerDependencies": {
    "mongodb": "*"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "mongodb": "^6.0.0",
    "mongodb-memory-server": "^9.1.8"
