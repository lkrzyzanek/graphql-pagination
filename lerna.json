{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    },
    "version": {
      "message": "Release",
      "ignoreChanges": [
        "**/*.md",
        "examples/**",
        "**/package-lock.json"
      ],
      "includeMergedTags": true
    },
    "publish": {
      "ignoreChanges": [
        "**/package-lock.json"
      ]
    }
  }
}
