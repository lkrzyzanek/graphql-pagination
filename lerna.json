{
  "packages": [
    "packages/*",
    "examples/*"
  ],
  "version": "independent",
  "command": {
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    },
    "version": {
      "message": "Release",
      "ignoreChanges": [
        "**/*.md",
        "examples/**",
        "**/package-lock.json"
      ],
      "includeMergedTags": true
    }
  }
}
