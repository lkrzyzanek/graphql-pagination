{
  "plugins": ["jest"],
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest/globals": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "indent": ["warn", 2],
    "semi": ["error", "always"],
    "object-curly-spacing": ["error", "always"],
    "no-console": "warn",
    "no-unused-vars": "warn",
    "no-var": "error",
    "no-trailing-spaces": "error",
    "no-undef-init": "error",
    "no-underscore-dangle": "off",
    "no-unused-expressions": "error",
    "no-unused-labels": "error",
    "prefer-const": "error",
    "comma-dangle": ["error", "always-multiline"],
    "space-in-parens": ["warn", "never"],
    "keyword-spacing": ["warn", { "after":true, "before":true }],
    "quotes": [
      "error",
      "double",
      {
        "avoidEscape": true
      }
    ]
  },
  "overrides": [
    {
      "files": ["__tests__/*"],
      "rules": {
        "no-unused-expressions": "off",
        "no-undef": "off"
      }
    }, {
      "files": ["examples/**"],
      "rules": {
        "no-console": "off"
      }
    }
  ],
  "ignorePatterns":[
    "**/dist/**/*",
    "jest.config.js"
  ]
}
