{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "test"]
      }
    }
  },
  "namedInputs": {
    "all": ["{projectRoot}/**/*"],
    "nonTests": ["!{projectRoot}/__tests__/*.*"]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["nonTests", "^nonTests"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["all", "^nonTests"]
    }
  }
}
